{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "information": {
          "name": {
            "firstName": {
              ".validate": "newData.isString() && newData.val().length <= 30"
            },
            "lastName": {
              ".validate": "newData.isString() && newData.val().length <= 30"
            }
          }
        }
      }
    },
    "offices": {
      ".read": true, // TODO: proper rules
      ".write": true
    }
  }
}