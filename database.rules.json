{
  "rules": {
    "userInfo": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid",
        "name": {
          "firstName": {
            ".validate": "newData.isString() && newData.val().length <= 30"
          },
          "lastName": {
            ".validate": "newData.isString() && newData.val().length <= 30"
          }
        },
        "address": {
          "city": {
            ".validate": "newData.isString() && newData.val().length <= 30"
          },
          "street": {
            ".validate": "newData.isString() && newData.val().length <= 80"
          }
        }
      }
    },
    "userOffices": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "userInitialInfo": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "userAppointments": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "officeFullInfo": {
      "$oid": {
        ".read": true,
        ".write": "!data.exists() || root.child('officeAdminInfo').child($oid).child('users').child(auth.uid).val() == 'admin'"
      }
    },
    "officeSearchInfo": {
      "$oid": {
        ".read": true,
        ".write": "!data.exists() || root.child('officeAdminInfo').child($oid).child('users').child(auth.uid).val() == 'admin'"
      }
    },
    "officeAdminInfo": {
      "$oid": {
        ".read": "data.child('users').child(auth.uid).val() == 'admin'",
        ".write": "!data.exists() || data.child('users').child(auth.uid).val() == 'admin'"
      }
    },
    "officeRegisteredPatients": {
      "$oid": {
        ".read": "data.child('users').child(auth.uid).val() == 'admin' || data.child('users').child(auth.uid).val() == 'operator'",
        ".write": "data.child('users').child(auth.uid).val() == 'admin' || data.child('users').child(auth.uid).val() == 'operator'"
      }
    },
    // TODO: proper rules
    "officeNumberOfNotifications": {
      ".read": true,
      ".write": true
    },
    "officePatientsToVerify": {
      ".read": true,
      ".write": true
    },
    "appointmentsPublic": {
      ".read": true,
      ".write": true
    },
    "appointmentsPrivate": {
      ".read": true,
      ".write": true
    }
  }
}